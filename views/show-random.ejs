<% if(recipe != null){%>
   
 <div class="row">
    <div class="col-12 col-md-4">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy" class="img-fluid sticky-top" style="top: 20px;">
    </div>
    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12">
                <h1><%= recipe.name %></h1>
                <div class="col-12 mb-4">
                    <i class="bi bi-tag"></i>
                    <%= recipe.category %>
                </div>
                <div class="col-12" style="white-space: pre-line;">
               
                <h4>Ingredientes</h4>
                <ul class="list-group list-group-flush">
                    <% recipe.ingredients.forEach((ingredient) => {%>
                        <li class="list-group-item"><%= ingredient %></li>
                    <% })%>
                </ul>
                
            </div>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-12">
                <h4>Modo de Preparo</h4>
                <p><%= recipe.description %></p>
            </div>
        </div>
    </div>
 </div>

<% } else {%>
    <p>Nada encontrado</p>
<% } %>